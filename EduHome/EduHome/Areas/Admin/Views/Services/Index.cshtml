@model List<Service>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h2 class="card-title">Services</h2>
                    <a asp-controller="Services" asp-action="Create" class="btn btn-primary text-white btn-rounded">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>SubTitle</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Service item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.SubTitle</td>
                                    <td>
                                        @if (item.IsDeactive)
                                        {
                                            <span class="text-danger">Deactive</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Active</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning text-white btn-rounded">Detail</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success text-white btn-rounded">Update</a>

                                        @if (item.IsDeactive)
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-success text-white btn-rounded">Activate</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger text-white btn-rounded">Deactivate</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class=" col-12">
    <div class="card">
        <nav aria-label="..." class="d-flex justify-content-center" style="padding-top: 16px;">
            <ul class="pagination pagination-lg">
                @*<li class="page-item ">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>*@
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (ViewBag.CurrentPage == i)
                    {
                        <li class="page-item  disabled">
                            <a class="page-link" asp-route-page="@i" tabindex="-1">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item ">
                            <a class="page-link" asp-route-page="@i" tabindex="-1">@i</a>
                        </li>
                    }

                }
                @*<li class="page-item">
                <a class="page-link" href="#">Next</a>
                </li>*@
            </ul>
        </nav>
    </div>
</div>


